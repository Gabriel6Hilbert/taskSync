<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1" author="gabri">
        <createTable tableName="task_init">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_task_entity"/>
            </column>

            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="prioridade" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>

            <column name="responsavel" type="VARCHAR(100)"/>

            <column name="concluida" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <column name="observacoes" type="TEXT"/>

            <column name="alerta_em" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
